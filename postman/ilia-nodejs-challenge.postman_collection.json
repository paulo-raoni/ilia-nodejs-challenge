    {
      "name": "Transactions (Internal)",
      "item": [
        {
          "name": "Internal Balance (protected)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('internal balance 200', function () {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('has amount', function () {",
                  "  const json = pm.response.json();",
                  "  pm.expect(json).to.have.property('amount');",
                  "});",
                  ""
                ],
                "type": "text/javascript",
                "packages": {},
                "requests": {}
              }
            },
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "(function () {\r",
                  "  const userId = pm.environment.get('userId');\r",
                  "  const secret = pm.environment.get('jwtInternalSecret');\r",
                  "\r",
                  "  if (!userId) throw new Error('Missing env var: userId');\r",
                  "  if (!secret) throw new Error('Missing env var: jwtInternalSecret');\r",
                  "\r",
                  "  if (typeof CryptoJS === 'undefined') {\r",
                  "    throw new Error('CryptoJS is not available in this Postman runtime');\r",
                  "  }\r",
                  "\r",
                  "  function b64url(wordArray) {\r",
                  "    return CryptoJS.enc.Base64.stringify(wordArray)\r",
                  "      .replace(/\\+/g, '-')\r",
                  "      .replace(/\\//g, '_')\r",
                  "      .replace(/=+$/g, '');\r",
                  "  }\r",
                  "\r",
                  "  const now = Math.floor(Date.now() / 1000);\r",
                  "  const header = b64url(CryptoJS.enc.Utf8.parse(JSON.stringify({ alg: 'HS256', typ: 'JWT' })));\r",
                  "  const payload = b64url(CryptoJS.enc.Utf8.parse(JSON.stringify({\r",
                  "    sub: userId,\r",
                  "    internal: true,\r",
                  "    iat: now,\r",
                  "    exp: now + 5 * 60\r",
                  "  })));\r",
                  "\r",
                  "  const data = header + '.' + payload;\r",
                  "  const sig = b64url(CryptoJS.HmacSHA256(data, secret));\r",
                  "  pm.environment.set('internalJwt', data + '.' + sig);\r",
                  "})();\r",
                  ""
                ],
                "type": "text/javascript",
                "packages": {},
                "requests": {}
              }
            }
          ],
