            "header": [
              { "key": "Authorization", "value": "Bearer {{externalJwt}}", "type": "text" }
            ],
            "url": {
              "raw": "{{transactionsBaseUrl}}/status",
              "host": ["{{transactionsBaseUrl}}"],
              "path": ["status"]
            }
          },
          "event": [
